                android:gravity="center"
                android:singleLine="true"
                android:text="UserName"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:visibility="invisible"/>
