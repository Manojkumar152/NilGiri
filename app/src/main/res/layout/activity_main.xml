<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


<ImageView
    android:id="@+id/imageView"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:src="@drawable/splash_logo_new"
    android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/realtive_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/light_dark_grey"
        android:text=""/>
    <View
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="-2dp"
        android:background="@color/light_dark_grey"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/realtive_layout"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/light_dark_grey"
        android:text="Group Of Companies"/>

</RelativeLayout>
