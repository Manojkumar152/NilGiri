<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_current_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangular_shape_square_orange">

            <TextView
                android:id="@+id/tv_current_bance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Order History"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/total_amount"
                android:layout_below="@id/tv_current_bance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:hint="$12200.60"
                android:minLines="1"
                android:maxLength="16"
                android:textSize="38sp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_current_balance"
                android:layout_below="@id/total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="60dp"
                android:text="Total Balance"
                android:textSize="20sp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"/>

        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
       android:scrollbars="none" >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>